<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF6200EE"
                android:endColor="#FF3700B3"
                android:angle="45" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="#FFBB86FC" /> <!-- Outline when pressed -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFBB86FC"
                android:endColor="#FF6200EE"
                android:angle="45" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="#FF3700B3" /> <!-- Outline for default state -->
        </shape>
    </item>
</selector>

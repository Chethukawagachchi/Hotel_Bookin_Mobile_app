<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when the button is pressed -->
    <item android:state_pressed="true" android:drawable="@color/design_default_color_secondary"/>

    <!-- State when the button is focused -->
    <item android:state_focused="true" android:drawable="@color/cardview_light_background"/>

    <!-- Default state -->
    <item android:drawable="@color/design_default_color_on_secondary"/>

</selector>
